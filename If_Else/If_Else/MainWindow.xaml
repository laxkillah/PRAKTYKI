<Window x:Class="If_Else.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:If_Else"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="changeText" Content="Kliknięcie zmienia etykietę" HorizontalAlignment="Center" VerticalAlignment="Center" Width="163" Click="changeText_Click"/>
        <CheckBox x:Name="enableCheckbox" Content="Włącza zmianę etykiety" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="enableCheckbox_Checked"/>
        <TextBlock x:Name="labelToChange" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Naciśnij przycisk, aby zmienić tekst" VerticalAlignment="Center" Width="641" Grid.Row="1" FontSize="36" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
